{
  "name": "vscode-snes",
  "displayName": "vscode-snes",
  "description": "SNES Extension",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlopez/vscode-snes"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-snes.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Asar",
      "properties": {
        "asar.path": {
          "type": "string",
          "default": "asar",
          "description": "Path to the Asar executable."
        },
				"asar.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				}
      }
    },
    "grammars": [
      {
        "language": "asar",
        "scopeName": "source.assembly.65816.asar",
        "path": "./syntaxes/asar.json"
      },
      {
        "scopeName": "source.65816-opcodes",
        "path": "./syntaxes/65816-opcodes.json"
      },
      {
        "scopeName": "source.65c02-opcodes",
        "path": "./syntaxes/65c02-opcodes.json"
      },
      {
        "scopeName": "source.6502-opcodes",
        "path": "./syntaxes/6502-opcodes.json"
      },
      {
        "scopeName": "source.65816l-opcodes",
        "path": "./syntaxes/65816l-opcodes.json"
      },
      {
        "scopeName": "source.65816alt-opcodes",
        "path": "./syntaxes/65816alt-opcodes.json"
      },
      {
        "scopeName": "source.spc700-opcodes",
        "path": "./syntaxes/spc700-opcodes.json"
      },
      {
        "scopeName": "source.superfx-opcodes",
        "path": "./syntaxes/superfx-opcodes.json"
      }
    ],
    "languages": [
      {
        "id": "asar",
        "aliases": [
          "Asar SNES Assembler",
          "asar"
        ],
        "extensions": [
          ".asm"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint client/src server/src --ext ts",
    "postinstall": "cd client && npm i && cd ../server && npm i && cd ..",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
