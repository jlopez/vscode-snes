// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
        {
            "label": "Build Node Addon",
            "type": "npm",
            "script": "build",
            "path": "asar/",
            "options": {
                "cwd": "${workspaceFolder}/asar"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "reveal": "silent"
            }
        }
	]
}
